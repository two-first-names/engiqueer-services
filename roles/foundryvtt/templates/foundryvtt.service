[Unit]
Description=A service to run the Foundry VTT node app
Documentation=https://foundryvtt.com
After=network.target

[Service]
Environment=NODE_PORT=30000
Type=simple
User=foundryvtt
ExecStart=/usr/bin/node /var/lib/foundryvtt/foundryvtt-{{ foundryvtt_version }}/main.js --dataPath=/var/foundryvtt/foundrydata
Restart=on-failure

[Install]
WantedBy=multi-user.target
